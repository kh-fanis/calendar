<h1 class="text-center"><%= @event.name %></h1>
<p class="text-center text-muted"><small>Author: <%= @event.user.full_name %></small></p>
<p class="text-center text-muted"><%= @event.date %></p>
<p class="text-center text-muted"><small><%= EventService.repeating(@event.occurance) %> Repeating Event</small></p>

<p><%= @event.description %></p>

<%= link_to 'Back', events_path(date: @event.date), class: 'btn' %>
<% if user_signed_in? and current_user == @event.user %>
  <%= link_to 'Edit', edit_event_path(@event), class: 'btn', id: 'edit' %>
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn', id: :delete %>
<% end %>
