<%= link_to 'Calendar' %>
<%= link_to 'Usual', events_path(usual: true) %>

<div id="calendar">

  <div id="month">
    <h2>
      <%= link_to '<', date: (@date.beginning_of_month - 1).strftime('%Y-%m') %>
      <%= @date.strftime('%B %Y') %>
      <%= link_to '>', date: (@date.end_of_month       + 1).strftime('%Y-%m') %>
    </h2>
  </div>

  <%= calendar_for @events, year: @date.year, month: @date.month do |calendar| %>
    <%= calendar.head('Sunday', 'Monady', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(day_method: :date) do |date, events| %>
      <%= date.day %>
      <ul>
        <% events.each do |event| %>
          <%= link_to event.name, event %>
        <% end %>
      </ul>
    <% end %>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to 'New Event', new_event_path %>
  <% end %>

</div>