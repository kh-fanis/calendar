<%= form_for @event do |f| %>
  <div class="field">
    title: <%= f.text_field :name %>
  </div>
  <div class="field">
    date: <%= f.date_field :date %>
  </div>
  <div class="field">
    description: <%= f.text_field :description %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>